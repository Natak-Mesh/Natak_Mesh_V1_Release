[Unit]
Description=Reticulum Mesh OGM Monitor
After=reticulum-mesh-network.service
Requires=reticulum-mesh-network.service

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/natak/reticulum_mesh/ogm_monitor
